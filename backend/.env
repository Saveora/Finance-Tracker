# Postgres
DATABASE_URL=postgres://ft_user:StrongPassword@localhost:5432/finance_tracker

# Server
PORT=5000
NODE_ENV=development

# JWT & refresh token
JWT_SECRET=replace_with_a_long_random_secret
JWT_EXPIRES_IN=15m

# We will issue refresh tokens as opaque random strings and store their hashes.
REFRESH_TOKEN_PEPPER=replace_with_another_random_secret
REFRESH_TOKEN_EXPIRES_DAYS=30

# Google OAuth (create credentials on Google Cloud)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback
